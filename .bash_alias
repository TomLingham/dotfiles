#!/bin/bash

alias ..='cd ..'
alias c='clear'
alias cd..='cd ..'
alias code='cd ~/Code'
alias dup='docker-compose up'
alias ddown='docker-compose down'
alias dbuild='docker-compose build'
alias h='cd ~'
alias ls='ls -lah --color'
alias ll='ls -lahF --color'
alias src='source ~/.bash_profile'
alias ovim='/usr/local/bin/vim'
alias vim='nvim'
alias v='nvim'
alias fuck='sudo $(history -p \!\!)'
alias serve='python -m SimpleHTTPServer'
alias vend='cd ~/Source'
alias tmn='tmux attach || tmux new -s Tomdizzle'

docker() {
  if [[ $1 == "buildx" ]]; then
    command docker build --build-arg http_proxy=${HTTP_PROXY} --build-arg https_proxy=${HTTPS_PROXY} --build-arg no_proxy=${NO_PROXY} "${@:2}"
  elif [[ $1 == "clean" ]]; then
    docker rm --force $(docker ps -a -q)
    docker rmi --force $(docker images -q)
  else
    command docker "$@"
  fi

}
